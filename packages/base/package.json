{
  "name": "@pkvsinha/react-base",
  "version": "0.0.9",
  "description": "",
  "type": "module",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": [
    "**/*.css"
  ],
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/esm/index.d.ts"
    },
    "./css": {
      "default": "./dist/pkv.base.min.css"
    },
    "./builder": {
      "import": "./dist/esm/builder/index.js",
      "types": "./dist/esm/builder/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pkvsinha/reactapp.git"
  },
  "peerDependencies": {
    "react": ">=18.2.0 <20",
    "react-dom": ">=18.2.0 <20"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": false
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rimraf dist",
    "build:css": "tsx scripts/build-css.ts && postcss dist/pkv.base.css -o dist/pkv.base.css && prettier --write dist/pkv.base.css",
    "minify": "cross-env MINIFY=1 postcss dist/pkv.base.min.css -o dist/pkv.base.min.css",
    "prebuild": "pnpm run clean && pnpm run build:css && pnpm run minify",
    "build": "rollup -c",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.13.1",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@storybook/addon-docs": "9.0.18",
    "@storybook/react-vite": "9.0.18",
    "@types/js-yaml": "^4.0.9",
    "@types/react": "^19.1.1",
    "js-yaml": "^4.1.0",
    "rollup": "^4.45.3",
    "rollup-plugin-dts": "^6.2.1",
    "rollup-plugin-postcss": "^4.0.2",
    "storybook": "9.0.18",
    "typescript": "^5.8.3",
    "vite": "^7.0.6"
  },
  "dependencies": {
    "@pkvsinha/react-theme": "workspace:*"
  }
}
