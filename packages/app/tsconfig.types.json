{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": false,
    "outDir": "dist/esm/types",
    "stripInternal": true,
    "composite": false
  },
  "include": [
    "src/index.ts",
    "src/umd.ts",
    "src/server.ts",
    "src/adapters/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "**/*.test.*",
    "**/*.spec.*",
    "**/*.stories.*",
    "scripts/**",
    "examples/**"
  ]
}

